@page
@model ProductosModel
@{
    ViewData["Title"] = "Productos";
    var nonce = ViewData["nonce"] as string;
}

<h2>Productos</h2>

<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Stock</th>
            <th>Stock Mínimo</th>
            <th>Precio Unitario</th>
            <th>Categoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model.listaProductos)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Stock</td>
                <td>@producto.StockMinimo</td>
                <td>@producto.PrecioUnitario</td>
                <td>@producto.IdCategoria</td>
                <td>
                    <!-- Formulario para editar producto -->
                    <form method="post" asp-page-handler="Actualizar">
                        <input type="hidden" name="ProductoEditado.IdProducto" value="@producto.IdProducto" />
                        <input type="text" name="ProductoEditado.Nombre" value="@producto.Nombre" />
                        <input type="number" name="ProductoEditado.Stock" value="@producto.Stock" />
                        <input type="number" name="ProductoEditado.StockMinimo" value="@producto.StockMinimo" />
                        <input type="number" step="0.01" name="ProductoEditado.PrecioUnitario" value="@producto.PrecioUnitario" />
                        <input type="number" name="ProductoEditado.IdCategoria" value="@producto.IdCategoria" />
                        <button type="submit">Actualizar</button>
                    </form>
                    <!-- Formulario para eliminar producto -->
                    <form method="post" asp-page-handler="Eliminar">
                        <input type="hidden" name="IdProductoEliminar" value="@producto.IdProducto" />
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Agregar Producto</h3>
<form method="post" asp-page-handler="Agregar">
    <label>Nombre:</label>
    <input type="text" name="NuevoProducto.Nombre" required />
    <label>Stock:</label>
    <input type="number" name="NuevoProducto.Stock" required />
    <label>Stock Mínimo:</label>
    <input type="number" name="NuevoProducto.StockMinimo" required />
    <label>Precio Unitario:</label>
    <input type="number" step="0.01" name="NuevoProducto.PrecioUnitario" required />
    <label>Categoría:</label>
    <input type="number" name="NuevoProducto.IdCategoria" required />
    <button type="submit">Agregar</button>
</form>